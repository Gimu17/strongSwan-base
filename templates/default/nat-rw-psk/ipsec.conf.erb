# ipsec.conf - strongSwan IPsec configuration file

# basic configuration

config setup
    # nat_traversal=<%= node[:strongswan][:ipsec][:conf][:natt] %>
    
conn %default
    ikelifetime=60m
    keylife=20m
    rekeymargin=3m
    keyingtries=1
    keyexchange=<%= node[:strongswan][:ipsec][:conf][:keyexchange] %>
    ike=<%= node[:strongswan][:ipsec][:conf][:ike] %>
    esp=<%= node[:strongswan][:ipsec][:conf][:esp] %>
    pfs=no
    authby=secret

conn client
    leftid=<%= node[:strongswan][:ipsec][:left][:id] %>
    left=<%= node[:strongswan][:ipsec][:left][:route] %>
    leftsubnet=<%= node[:strongswan][:ipsec][:left][:subnet] %>
    leftfirewall=yes
    right=<%= node[:strongswan][:ipsec][:right][:route] %>
    rightsubnet=<%= node[:strongswan][:ipsec][:right][:subnet] %>
    auto=add

